{
  "path": "/panel/buildings",
  "audience": "https://companies.digituz.com.br",
  "domain": "buildings",
  "title": "Empreendimento",
  "plural": "Empreedimentos",
  "description": "Gerencie empreendimentos com facilidade.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "label": "Nome",
      "placeholder": "Insira o nome do empreendimento.",
      "max": "100"
    },
    "path": {
      "type": "string",
      "label": "URL",
      "placeholder": "Insira a URL do empreendimento.",
      "max": "100"
    },
    "date": {
      "type": "date",
      "format": "date",
      "label": "Data de Finalização",
      "placeholder": "Data de finalização da obra."
    },
    "address": {
      "type": "string",
      "label": "Endereço",
      "placeholder": "Insira o endereço do empreedimento.",
      "max": "250"
    },
    "neighborhood": {
      "type": "string",
      "label": "Bairro",
      "placeholder": "Insira o bairro onde o empreendimento se localiza.",
      "max": "100"
    },
    "mainPicture": {
      "type": "file",
      "label": "Foto Principal"
    },
    "pictures": {
      "type": "file",
      "label": "Fotos",
      "multiple": true
    },
    "folder": {
      "type": "file",
      "label": "Folder"
    },
    "descriptiveMemorial": {
      "type": "file",
      "label": "Memorial Descritivo"
    }
  },
  "required": ["title", "path", "address", "neighborhood"]
}
